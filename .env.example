# MongoDB Connection String
# Copy this file to .env and update with your credentials
# The .env file is ignored by git for security

# =============================================================================
# OPTION 1: Local MongoDB (Recommended for development)
# =============================================================================
# If using local MongoDB without authentication:
# MONGODB_URI=mongodb://localhost:27017

# If using local MongoDB with authentication:
# MONGODB_URI=mongodb://username:password@localhost:27017/?authSource=admin

# If using local MongoDB replica set (required for change streams):
# MONGODB_URI=mongodb://username:password@localhost:27017/?authSource=admin&replicaSet=rs0&directConnection=true

# =============================================================================
# OPTION 2: MongoDB Atlas (Cloud)
# =============================================================================
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority

# =============================================================================
# Database Settings
# =============================================================================
# Database name (default: zim_geofence)
DB_NAME=zim_geofence

# Use TimeSeries collection for queries (true/false)
USE_TIMESERIES=false

# =============================================================================
# Debug Mode
# =============================================================================
# Set to true for local development (uses localhost MongoDB by default)
DEBUG=true
